<div class="cinema-list">
    <h2>Ironhack Cinema</h2>
    <h6>Click on the movie to check our showtimes!</h6>
    <div class="card movie-list" style="width: 18rem;">
        {{#each movies}}
        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
        <div class="card-body">
        <p class="card-text title-text">{{this.title}}</p>
        <a class="btn btn-primary" href="/movies/{{this.id}}/details" role="button">Check the movies!</a>
        </div>
        {{/each}}
    </div>
</div>

<h1> Ironhack Cinema </h1>